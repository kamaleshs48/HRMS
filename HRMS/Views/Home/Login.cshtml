@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Welcome to Best Care | Login</title>

    <!-- Bootstrap Core CSS -->
    <link href="@Url.Content("~/Vendor/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="@Url.Content("../Vendor/metisMenu/dist/metisMenu.min.css")" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="@Url.Content("~/dist/css/sb-admin-2.css")" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="@Url.Content("../Vendor/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>
    @model HRMS.Models.LoginModels
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">

                        @using (Html.BeginForm("Login", "Home"))
                        { 
                            <div role="form">

                                <fieldset>
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                    <legend></legend>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.EmailID, new { @placeholder = "E-mail", @class = "form-control" })

                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(m => m.Password, new { @placeholder = "password", @class = "form-control" })

                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                   
                                        </label>
                                    </div>
                                    <input type="submit" value="Login" class="btn btn-lg btn-success btn-block" />
                                    <!-- Change this to a button or input when using this as a form -->
                                     <div class="form-group">
                                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                                    </div>
                                </fieldset>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="@Url.Content("../Vendor/jquery/dist/jquery.min.js")"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="@Url.Content("~/Vendor/bootstrap/dist/js/bootstrap.min.js")"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="@Url.Content("~/Vendor/metisMenu/dist/metisMenu.min.js")"></script>

    <!-- Custom Theme JavaScript -->
    <script src="@Url.Content("~/dist/js/sb-admin-2.js")"></script>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>

</html>

