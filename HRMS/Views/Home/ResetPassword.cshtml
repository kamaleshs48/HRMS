@{
    ViewBag.Title = "ResetPassword";
    Layout = null;
}
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="">
<meta name="author" content="">

<title>Welcome to Best Care | Login</title>

<!-- Bootstrap Core CSS -->
<link href="@Url.Content("~/Vendor/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet">

<!-- MetisMenu CSS -->
<link href="@Url.Content("../Vendor/metisMenu/dist/metisMenu.min.css")" rel="stylesheet">

<!-- Custom CSS -->
<link href="@Url.Content("~/dist/css/sb-admin-2.css")" rel="stylesheet">

<!-- Custom Fonts -->
<link href="@Url.Content("../Vendor/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css">

@model HRMS.Models.ResetPasswordViewModel
<br /><br /><br /><br /><br /><br />
<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <div class="panel panel-default form-signin">
            <div class="panel-heading"><strong>Reset password</strong> </div>
            @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(m => m.Email)

                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-sm-4">
                            Password:<span style='color: red'> *</span>
                        </div>
                        <div class="col-sm-8">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control pull-left", @placeholder = "Enter Password" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4">
                            Confirm password:<span style='color: red'> *</span>
                        </div>
                        <div class="col-sm-8">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control pull-left", @placeholder = "Enter Confirm password" })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-sm-4">
                        </div>
                        <div class="col-sm-8">
                            <input type="submit" name="Submit" value="Submit" id="submit" class="btn btn-primary btn-sm">

                            <a href="@Url.Action("index", "Home")" id="rBack" class="btn btn-primary" style="display:none"></a>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
