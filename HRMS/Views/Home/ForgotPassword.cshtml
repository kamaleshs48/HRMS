@{
    ViewBag.Title = "ForgotPassword";
    Layout = null;
}
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
@using HRMS.Models
@model ForgotViewModel
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="">
<meta name="author" content="">

<title>Welcome to Best Care | Forgot Password</title>

<!-- Bootstrap Core CSS -->
<link href="@Url.Content("~/Vendor/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet">

<!-- MetisMenu CSS -->
<link href="@Url.Content("../Vendor/metisMenu/dist/metisMenu.min.css")" rel="stylesheet">

<!-- Custom CSS -->
<link href="@Url.Content("~/dist/css/sb-admin-2.css")" rel="stylesheet">
<script src="~/Scripts/Comman.js"></script>
<!-- Custom Fonts -->
<link href="@Url.Content("../Vendor/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css">
<link href="@Url.Content("~/sweetalert/lib/sweet-alert.css")" rel="stylesheet" />
    <script src="@Url.Content("~/sweetalert/lib/sweet-alert.min.js")"></script>
    <script src="@Url.Content("~/scripts/comman.js")"></script>
    <script src="@Url.Content("~/sweetalert/lib/core.js")"></script>

<script type="text/javascript">
    function GoToBack() {
        $('#rBack')[0].click();
    }
    function ShowErrorPopup() {

       

        var m = '@ViewBag.Error';
        console.log(m);
        if (m == 'Password has been reset and sent to your email.') {
            ShowAlertWithBack(m);
            // window.location = '/index'
        }
        else {
            ShowAlertF(m, 'Email');
        }


    }
    $(document).ready(function () {
        @ViewBag.JavascriptToRun
        $('#Email').focus();
   });


</script>
<br /><br /><br /><br /><br />
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <div class="panel panel-default form-signin">
                <div class="panel-heading"><strong>Forgot Password</strong> </div>
                @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                {

                    <div class="panel-body">
                        <div class="row form-group">
                            <div class="col-sm-4">
                                <label class="control-label" for="inputEmail3">Email ID:</label>
                            </div>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control pull-left", @placeholder = "Enter Email ID" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-4">
                            </div>
                            <div class="col-sm-8">
                                <input type="submit" name="Submit" value="Submit" id="submit" class="btn btn-primary">
                                <a href="@Url.Action("Login", "Home")" class="btn btn-primary" id="rBack">Cancel</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- jQuery -->
<script src="@Url.Content("../Vendor/jquery/dist/jquery.min.js")"></script>

<!-- Bootstrap Core JavaScript -->
<script src="@Url.Content("~/Vendor/bootstrap/dist/js/bootstrap.min.js")"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="@Url.Content("~/Vendor/metisMenu/dist/metisMenu.min.js")"></script>




<!-- Custom Theme JavaScript -->
<script src="@Url.Content("~/dist/js/sb-admin-2.js")"></script>
