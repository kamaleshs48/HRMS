@{
    ViewBag.Title = "EmpList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model HRMS.Models.EmployeeRegisterModel
<br />
<div class="row">
    <div class="col-lg-12">
        <a href="@Url.Action("EmpRegister", "Admin")" class="btn btn-success">Add New Employee</a>

    </div>
</div>
<div class="row" style="padding-top: 10px;">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Employee List
                       
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>EMail</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var l in Model.EmpList)
                            {
                                <tr>
                                    <td>@l.FirstName</td>
                                    <td>@l.LastName</td>
                                    <td>@l.Email</td>
                                    <td><a href="#" class="btn btn-primary btn-xs">Edit</a>
                                        <a href="@Url.Action("BasicDetails", "Member", new { @ID = HRMS.Repository.CommanFunction.UrlEncode(@l.EmpID) })" class="btn btn-success btn-xs">View Details</a>
                                        <a href="@Url.Action("EmpDoc", "Admin", new { @ID = HRMS.Repository.CommanFunction.UrlEncode(@l.EmpID) })" class="btn btn-danger btn-xs" >View Doucment</a>
                                    </td>
                                </tr>
                            }



                        </tbody>
                    </table>
                </div>

                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
</div>
<script src="@Url.Content("~/Vendor/datatables/media/js/jquery.dataTables.min.js")"></script>
<script src="@Url.Content("~/Vendor/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js")"></script>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>
