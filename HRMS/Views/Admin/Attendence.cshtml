@{
    ViewBag.Title = "Attendance";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    var D = DateTime.DaysInMonth(DateTime.Now.Year, DateTime.Now.Month);
    var day = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);

   
    
}
@model HRMS.Models.EmpAttendanceModels
<br />
<div class="row">
    <div class="col-lg-12">
        <a href="@Url.Action("EmpRegister", "Admin")" class="btn btn-success">Add New Employee</a>

    </div>
</div>
<div class="row" style="padding-top: 10px;">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Add Attendence
                       
            </div>
            <!-- /.panel-heading -->
            @using (Html.BeginForm())
            {


                <div class="panel-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary()
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="FirstName">Employee Name:</label>
                                <div class="col-sm-4">
                                    @Html.DropDownListFor(m => m.EMPID, Model.EmpList, "--SelectList--", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2">Month:</label>
                                <div class="col-sm-4">
                                    @Html.DropDownListFor(m => m.MonthID, Model.MonthList, "--SelectList--", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="dataTable_wrapper">
                            <table class="" id="" border="1">
                                <thead>
                                    <tr>

                                        @for (int a = 0; a < D; a++)
                                        {
                               
                                            <th>@day.ToString("dd")</th>
                                    
                                            {
                                                day = day.AddDays(1);

                                            }
                                        }
                                    </tr>

                                </thead>
                                <tbody>

                                    <tr>

                                        @for (int a = 0; a < D; a++)
                                        {
                               
                                            <td>
                                                <input type="text" style="width:100%;border:0;height:100%" id="@a" />
                                            </td>
                                    
                                        }
                                    </tr>


                                </tbody>
                            </table>
                        </div>
                       <br />
                         <div class="col-md-8 col-md-offset-2">
                            <div class="form-group">
                                
                                <input type="submit" value="Save" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
                <strong>Note:</strong>
                <ul>
                    <li>A-Absent</li>
                    <li>P-Prsent</li>
                    <li>SL-Seek Leav</li>
                    <li>PL-Paid Leav</li>
                </ul>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

