@{
    ViewBag.Title = "Attendance";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    var D = DateTime.DaysInMonth(DateTime.Now.Year, DateTime.Now.Month);
    var day = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
}

<script>

    $(document).ready(function () {
        alert('s');
    });
</script>

@model HRMS.Models.EmployeeRegisterModel
<br />
<div class="row">
    <div class="col-lg-12">
        <a href="@Url.Action("EmpRegister", "Admin")" class="btn btn-success">Add New Employee</a>

    </div>
</div>
<div class="row" style="padding-top: 10px;">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Add Attendence
                       
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="" id="" border="1">
                        <thead>
                            <tr>

                                @for (int a = 0; a < D; a++)
                                {
                               
                                    <th>@day.ToString("dd")</th>
                                    
                                    {
                                        day = day.AddDays(1);

                                    }
                                }
                            </tr>

                        </thead>
                        <tbody>

                            <tr>

                                @for (int a = 0; a < D; a++)
                                {
                               
                                    <td><input type="text" style="width:100%;border:0;height:100%" id="@a" /> </td>
                                    
                                }
                            </tr>


                        </tbody>
                    </table>
                </div>

                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
</div>
